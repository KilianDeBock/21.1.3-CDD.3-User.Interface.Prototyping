{% if textImg.container %}
<div class="container">
    {% endif %}
    <section class="text-img{% if textImg.type %} text-img__{{ textImg.type }}{% endif %}">
        <span class="text-img__text-box">
            <h2 class="text-img__title">{{ textImg.title | safe }}</h2>
            <div class="text-img__text">{{ textImg.text | safe }}</div>
            {% if textImg.btn %}
                <button class="btn">{{ textImg.btn }}</button>
            {% endif %}
        </span>
        <img class="text-img__img" src="/dist/images/{{ textImg.img }}" alt="{{ textImg.imgAlt }}">
    </section>
    {% if textImg.container %}
</div>
{% endif %}